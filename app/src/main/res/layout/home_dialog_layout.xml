<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_corner_white_bg"
    android:orientation="vertical">

    <!--    <TextView-->
    <!--        android:text="确定要退出登录？"-->
    <!--        android:gravity="center"-->
    <!--        android:textSize="16sp"-->
    <!--        android:layout_marginTop="30dp"-->
    <!--        android:textColor="#333540"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="21dp" />-->

    <EditText
        android:id="@+id/edit"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="@string/home_dialog_edit_hint"
        android:password="true"
        android:textColor="#333540"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="25dp"
        android:background="#CECFD9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp">

        <Button
            android:id="@+id/btn_cancel_high_opion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="取消"
            android:textColor="#333540"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20sp"
            android:background="#CECFD9" />

        <Button
            android:id="@+id/btn_agree_high_opion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="确定"
            android:textColor="#415FFF"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>

